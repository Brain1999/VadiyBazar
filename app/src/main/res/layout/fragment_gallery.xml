<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:background="@drawable/input_background">
            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="@color/coloBack"
                android:text="Pulingizni yechish turini tanlang"
                android:layout_marginBottom="12dp"
                android:textStyle="bold"/>
            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_below="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp">
                <RadioButton
                    android:id="@+id/radio_paynet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paynet orqali"
                    android:textSize="16sp"
                    android:checked="true"
                    android:textColor="@color/coloBack"/>
                <RadioButton
                    android:id="@+id/radio_plastik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plastik kartaga o'tkazish orqali"
                    android:textSize="16sp"
                    android:textColor="@color/coloBack"/>
            </RadioGroup>
            <EditText
                android:id="@+id/editTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_below="@+id/radiogroup"
                android:layout_marginTop="12dp"
                android:hint="Telefon raqamni kiriting"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:textColor="@color/coloBack"
                android:textColorHint="@color/coloBack"/>
            <EditText
                android:id="@+id/editKarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="18sp"
                android:padding="16dp"
                android:visibility="invisible"
                android:layout_below="@+id/radiogroup"
                android:background="@drawable/input_background"
                android:layout_marginTop="12dp"
                android:hint="Karta raqamni kiriting"
                android:textColorHint="@color/colorPrimaryDark"/>
            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_below="@+id/editKarta"
                android:layout_marginTop="12dp"
                android:hint="Akkountingiz parolini kiriting"
                android:textColorHint="@color/coloBack"
                android:textColor="@color/coloBack"/>
            <Button
                android:id="@+id/btnYechish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yechish"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:layout_below="@+id/editPassword"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

    </RelativeLayout>


</RelativeLayout>